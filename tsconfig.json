{
    "compilerOptions": {
        "target": "es5",
    	"module": "commonjs",
    	"watch": true,
    	"moduleResolution": "node",
    	"sourceMap": true,
    	"emitDecoratorMetadata": true,
    	"experimentalDecorators": true,
    	"removeComments": false,
    	"noImplicitAny": false,
    	"skipDefaultLibCheck": true
    },
	"buildOnSave": false,
	"compileOnSave": true,
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}